                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>theme-api-tutorial</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.ide.version}</version>
                                    <overWrite>false</overWrite>
